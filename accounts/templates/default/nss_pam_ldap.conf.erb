uri             <%= @accounts[:protocol] ? @accounts[:protocol] : @client[:protocol] %><%= @accounts[:domain] ? @accounts[:domain] : @client[:domain] %>
<% if @accounts[:basedn] %>
base            <%= @accounts[:basedn] ? @accounts[:basedn] : @client[:basedn] %>
<% end %>
<% if @accounts[:ssl] %>
ssl             <%= @accounts[:ssl] %>
<% end %>
<% if @client[:certfile] %> 
tls_cacert      <%= @client[:certfile] %>
<% elsif @client[:certdir] %>
tls_cacertdir   <%= @client[:certdir] %>
<% end %>
<% if @accounts[:passwd] %>
<%= @accounts[:passwd] %>
<% end %>
