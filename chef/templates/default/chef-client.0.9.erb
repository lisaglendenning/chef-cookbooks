# Configuration file for the chef-client service

<% [['CONFIG', :config], 
    ['PIDFILE', :pidfile], 
    ['LOCKFILE', :lockfile], 
    ['LOGFILE', :logfile], 
    ['INTERVAL', :interval],
    ['SPLAY', :splay]].each do |k| %>
<%   if @client[k[1]] %>
<%=     "#{k[0]}=#{@client[k[1]]}" %>

<%   end %>
<% end %>
<% options = "" %>
<% if @client[:node] %>
<%    options << "-N #{@client[:node]}" %>
<% end %>
<% if ! options.empty? %>
<%=   "OPTIONS=\"#{options}\"" %>
<% end %>
