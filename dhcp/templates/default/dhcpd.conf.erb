# dhcpd.conf file

<% # dhcpd configuration files are composed of a sequence of nested blocks %>
<% queue = @blocks.reverse %>
<% spacer = "    " %>
<% while not queue.empty? do %>
<%   depth = 0 %>
<%   finger = queue %>
<%   block = finger.last %>
<%   while block.is_a?(Array) do %>
<%     if block.empty? %>
<%       block = nil %>
<%     else %>
<%       depth += 1 %>
<%       finger = block %>
<%       block = finger.last %>
<%     end %>
<%   end %>
<%   finger.pop %>
<%   if block.nil? %>
<%=    [spacer*depth, "}"].join("") %>
<%     next %>
<%   end %>
<%   output = [spacer*depth, block[:keyword]] %>
<%   block[:values].length().times do |i| %>
<%     output << " " %>
<%     value = block[:values][i] %>
<%     case block[:keyword] %>
<%     when :include %>
<%       value = "\"#{value}\"" %>
<%     when :option %>
<%       if i>0 and block[:values][i-1] == 'domain-name' %>
<%         value = "\"#{value}\"" %>
<%       end %>
<%     end %>
<%     output << value %>
<%   end %>
<%   if block.has_key?(:blocks) %>
<%     output << " {" %>
<%     finger.push(block[:blocks]) %>
<%   else %>
<%     output << ";" %>
<%   end %>
<%=  output.join("") %>
<% end %>
