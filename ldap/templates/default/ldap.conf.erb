#
# OpenLDAP Client Configuration
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

URI             <%= @properties[:protocol] + @properties[:domain] %>
<% if @properties[:basedn] %>
BASE            <%= @properties[:basedn] %>
<% end %>
TLS_REQCERT	    <%= @properties[:reqcert] %>
<% if @properties[:certfile] %> 
TLS_CACERT      <%= @properties[:certfile] %>
<% elsif @properties[:certdir] %>
TLS_CACERTDIR   <%= @properties[:certdir] %>
<% end %>
