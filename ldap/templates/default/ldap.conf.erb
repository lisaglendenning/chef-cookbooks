#
# OpenLDAP Client Configuration
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

URI             <%= "#{@client[:protocol]}#{@client[:domain]}" %>
<% if @client[:basedn] %>
BASE            <%= @client[:basedn] %>
<% end %>
TLS_REQCERT	    <%= @client[:reqcert] %>
<% if @client[:certfile] %> 
TLS_CACERT      <%= @client[:certfile] %>
<% elsif @client[:certdir] %>
TLS_CACERTDIR   <%= @client[:certdir] %>
<% end %>
