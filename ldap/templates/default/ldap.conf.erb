#
# OpenLDAP Client Configuration
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

URI             <%= node[:ldap][:protocol] + node[:ldap][:domain] %>
<% if node[:ldap][:basedn] %>
BASE            <%= node[:ldap][:basedn] %>
<% end %>
TLS_REQCERT	    <%= node[:ldap][:reqcert] %>
<% if node[:ldap][:cafile] %> 
TLS_CACERT      <%= node[:ldap][:cafile] %>
<% else %>
TLS_CACERTDIR   <%= node[:ldap][:cadir] %>
<% end %>
